# Fahimo Widget - Force UTF-8 encoding for JavaScript files
<Files "fahimo-widget.js">
    Header set Content-Type "application/javascript; charset=UTF-8"
</Files>

# General security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache static files
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
</IfModule>

# If faheemly.com doesn't have the Next.js static files, redirect those
# requests to the Render backend so CSS/JS/_next assets are served correctly.
RewriteEngine On

# Ensure JS and CSS are served with UTF-8 charset to avoid mojibake / garbled text
<IfModule mod_headers.c>
    <FilesMatch "\.(js|mjs)$">
        Header set Content-Type "application/javascript; charset=UTF-8"
    </FilesMatch>
    <FilesMatch "\.css$">
        Header set Content-Type "text/css; charset=UTF-8"
    </FilesMatch>

    # Allow fonts to be requested cross-origin (prevents some font failures)
    <FilesMatch "\.(woff2|woff|ttf|eot|otf)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Only proxy/redirect to Render when the requested file does NOT exist locally.
# This allows you to upload `public_html/_next/...` to Bluehost and have those
# files served directly, otherwise fall back to Render.
RewriteCond %{REQUEST_URI} ^/_next/ [NC]
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} !-f
RewriteRule ^_next/(.*)$ https://fahimo-api.onrender.com/_next/$1 [R=302,L]