{
  "name": "fahimo-server",
  "version": "1.0.0",
  "description": "Backend for Fahimo SaaS",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "node src/index.js",
    "dev": "nodemon src/index.js",
    "worker": "node src/queue/worker.js",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "prisma db push --accept-data-loss",
    "prisma:push:force": "prisma db push --accept-data-loss --force-reset",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "migrate:resolve": "npx prisma migrate resolve --applied 20251209120000_production_cleanup",
    "migrate:rollback": "npx prisma migrate resolve --rolled-back 20251209120000_production_cleanup",
    "start:prod": "npm run install:pgvector && npx prisma generate && node scripts/conditional-reset.js && node scripts/ensure-migrations.js && node src/index.js",
   
    "prisma:studio": "prisma studio",
    "install:pgvector": "node scripts/install-pgvector.js",
    "apply:user-name-migration": "node scripts/apply-user-name-migration.js",
    
    "db:seed": "node scripts/seed-faheemly-knowledge.js",
    "db:demo": "node scripts/create-demo-data.js",
    "check": "node scripts/check-infrastructure.js",
    "list:businesses": "node scripts/listBusinesses.js",
    "test:system": "node scripts/test-system.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:health": "jest tests/monitoring --verbose",
    "test:comprehensive": "node tests/comprehensive-test.js",
    "test:create-users": "node scripts/create-test-users.js",
    "generate:jwt": "node scripts/generate-jwt.js",
    "test:full": "npm run test:create-users && npm run test:comprehensive",
    "migrate:uploads": "node scripts/migrate-uploads-to-s3.js",
    "check:embeddings": "node scripts/check_embedding_providers.js",
   
    "lint:fix": "eslint 'src/**/*.js' --fix"
  },
  "keywords": [],
  "author": "ma-fo.info",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.358.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^7.1.0",
    "pg": "^8.11.0",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "cheerio": "^1.1.2",
    "concurrently": "9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "fast-levenshtein": "^3.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.11",
    "pdf-parse": "^1.1.1",
    "prisma": "^7.1.0",
    "redis": "^5.10.0",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.4",
    "twilio": "^5.10.6",
    "ua-parser-js": "^2.0.6",
    "zod": "^4.1.13"
  },
  "optionalDependencies": {
    "mime-types": "^2.1.35",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
