# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/faheemly_db"

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"

# Security
JWT_SECRET="your-super-secure-jwt-secret-minimum-32-characters"
ADMIN_INITIAL_PASSWORD="temporary-admin-password-change-immediately"

# AI Providers (get keys from respective dashboards)
GROQ_API_KEY="gsk_your_groq_key_here"
GEMINI_API_KEY="your_gemini_key_here"
DEEPSEEK_API_KEY="sk_your_deepseek_key_here"
CEREBRAS_API_KEY="your_cerebras_key_here"

# Server Configuration
PORT=3001
NODE_ENV="development"

# Frontend Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"

# Email Configuration (optional)
SMTP_EMAIL="noreply@faheemly.com"
SMTP_PASSWORD="your_app_password"

# WhatsApp/Twilio (optional)
TWILIO_ACCOUNT_SID="your_twilio_sid"
TWILIO_AUTH_TOKEN="your_twilio_token"
WHATSAPP_PHONE_NUMBER_ID="your_whatsapp_number_id"

# Optional: AI Embeddings
GROQ_EMBED_MODEL="nomic-embed-text"
SKIP_GEMINI_EMBEDDING="false"