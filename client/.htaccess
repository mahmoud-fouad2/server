# ============================================
# CLEAN URLs - Remove .html Extension
# ============================================

RewriteEngine On

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L,QSA]

# Redirect .html URLs to clean URLs
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# ============================================
# NEXT.JS STATIC EXPORT ROUTING
# ============================================

# Handle Next.js routes
RewriteEngine On

# Don't rewrite files or directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle API routes (if you have any static API)
RewriteRule ^api/(.*)$ api/$1 [L]

# Handle _next static files - must exist
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^_next/(.*)$ - [L]

# Serve _next chunks with correct MIME type
<FilesMatch "\.js$">
    Header set Content-Type "application/javascript; charset=utf-8"
</FilesMatch>

# Handle country routes
RewriteRule ^(sa|eg|ae|kw)/?$ $1.html [L]
RewriteRule ^(saudi|egypt|uae|kuwait)/?$ $1.html [L]

# Handle solutions routes
RewriteRule ^solutions/(restaurant|clinic|retail|business|education|realestate)/?$ solutions/$1.html [L]

# Handle main routes
RewriteRule ^(about|contact|services|pricing|login|register|wizard|careers|news|examples|privacy|terms)/?$ $1.html [L]

# Handle dashboard and admin routes (client-side only)
RewriteRule ^(dashboard|admin|settings|conversations|knowledge)/?$ index.html [L]

# Fallback to index.html for SPA routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.html [L]

# ============================================
# ERROR PAGES
# ============================================

ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
ErrorDocument 500 /404.html

# ============================================
# FILE SECURITY
# ============================================

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect package.json and other config files
<FilesMatch "(package\.json|\.env|\.git|\.gitignore|composer\.json|composer\.lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============================================
# MIME TYPES
# ============================================

<IfModule mod_mime.c>
    # JavaScript
    AddType application/javascript js
    AddType application/json json
    
    # Fonts
    AddType font/ttf ttf
    AddType font/otf otf
    AddType font/woff woff
    AddType font/woff2 woff2
    AddType application/vnd.ms-fontobject eot
    
    # Images
    AddType image/svg+xml svg svgz
    AddType image/webp webp
    
    # UTF-8 Encoding
    AddDefaultCharset UTF-8
    AddCharset UTF-8 .html .css .js .json .xml .txt
</IfModule>

# ============================================
# ALLOW CORS (If needed for API)
# ============================================

<IfModule mod_headers.c>
    # Allow cross-origin requests for fonts and images
    <FilesMatch "\.(ttf|otf|eot|woff|woff2|svg|webp|jpg|jpeg|png|gif)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# ============================================
# PHP SETTINGS (If PHP is used for API)
# ============================================

# php_value upload_max_filesize 10M
# php_value post_max_size 10M
# php_value max_execution_time 300
# php_value max_input_time 300

# ============================================
# GZIP COMPRESSION (Alternative to mod_deflate)
# ============================================

<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_dechunk Yes
    mod_gzip_item_include file \.(html?|txt|css|js|php|pl)$
    mod_gzip_item_include handler ^cgi-script$
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_include mime ^application/x-javascript.*
    mod_gzip_item_exclude mime ^image/.*
    mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

