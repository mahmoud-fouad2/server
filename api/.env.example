# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fahimo_db?schema=public"

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Providers Configuration

# Groq (Fast, llama-3.3-70b)
GROQ_API_KEY=your-groq-api-key

# Google Gemini (gemini-2.0-flash-exp)
GEMINI_API_KEY=your-gemini-api-key

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Cerebras
CEREBRAS_API_KEY=your-cerebras-api-key
CEREBRAS_BASE_URL=https://api.cerebras.ai/v1

# Embedding Providers

# Voyage AI (Recommended for best quality)
VOYAGE_API_KEY=your-voyage-api-key

# OpenAI (Alternative for embeddings)
OPENAI_API_KEY=your-openai-api-key

# Integrations

# Twilio (for WhatsApp integration)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=Fahimo Support <noreply@fahimo.com>

# AWS S3 Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fahimo-uploads

# Google Cloud (for translation API)
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_LANGUAGE_DETECTION=true
ENABLE_WEB_CRAWLER=true
ENABLE_AGENT_HANDOFF=true

# Security
CSRF_SECRET=your-csrf-secret-key
COOKIE_SECRET=your-cookie-secret-key

# Webhooks
WEBHOOK_SECRET=your-webhook-secret

# Analytics
ENABLE_ANALYTICS=true

# Development
DEBUG=false
